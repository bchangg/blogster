<section class="flex flex-col mx-14">
  <h1 class="text-3xl font-bold">Articles#new</h1>

  <br>

  <%= form_with model: @article, class: 'flex flex-col' do |form| %>
    <%= form.label :title, "Title: " %>
    <%= form.text_field :title %>
    <%= form.label :body, "Body: " %>
    <%= form.text_area :body %>
    <%= form.submit %>
  <% end %>
</section>